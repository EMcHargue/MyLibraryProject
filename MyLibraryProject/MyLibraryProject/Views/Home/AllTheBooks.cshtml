@model System.Collections.Generic.List<MyLibraryProject.Models.Book>

@{
    ViewBag.Title = "AllTheBooks";
}
<h2>Currently in My Library:</h2>

@*Loop listing all books in database alphabetically by Author last name*@ 

@if (Model.Count > 0)
{
    for (var y = 0; y < Model.Count; y++)
    {
        var AlphaBook = Model.OrderBy(i => i.Author.LastName).ElementAt(y);
        <h3> @Html.ActionLink(AlphaBook.Title, "BookDetail", new { BookId = AlphaBook.Id }) </h3>
        <p>@AlphaBook.Author.FirstName @AlphaBook.Author.LastName</p>
            <p>Book on Shelf: @AlphaBook.OnShelf</p>
            <div class="btn-toolbar btn-group-lg" role="group" aria-label="Edit and Delete">
                <h3>@Html.ActionLink("Edit", "Edit", new { BookId = AlphaBook.Id }, new { @class = "btn btn-primary" })</h3>
                <h3>@Html.ActionLink("Delete", "Delete", new { BookId = AlphaBook.Id }, new { @class = "btn btn-danger" })</h3>
            </div>
    }
}