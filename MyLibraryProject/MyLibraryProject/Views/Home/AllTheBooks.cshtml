@model System.Collections.Generic.List<MyLibraryProject.Models.Book>

@{
    ViewBag.Title = "AllTheBooks";
}
<h2>Currently in My Library:</h2>

@*Loop listing all books in database*@

@for (var i = 0; i < Model.Count; i++)
{
    <h3> @Html.ActionLink(Model[i].Title, "BookDetail", new { BookId = Model[i].Id } ) </h3>
    <p>@Model[i].Author.FirstName @Model[i].Author.LastName</p>
        <p>Book on Shelf: @Model[i].OnShelf</p>
        <div class="btn-group btn-group-lg" role="group" aria-label="Edit and Delete">
            <h3>@Html.ActionLink("Edit", "Edit", new { BookId = Model[i].Id }, new { @class = "btn btn-primary" })</h3>
            <h3>@Html.ActionLink("Delete", "Delete", new { BookId = Model[i].Id }, new { @class = "btn btn-danger" })</h3>
        </div>
}

