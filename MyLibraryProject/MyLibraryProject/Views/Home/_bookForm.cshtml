@model MyLibraryProject.Models.Book

@{
    ViewBag.Title = "BookDetail";
}

@using (Html.BeginForm())
{
<div class="col-md-6">

    @*Form for book information*@

    <div class="form-group">
        @Html.LabelFor(b => b.Title, new { @class = "control-label" })
        @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Author.FirstName, new { @class = "control-label" })
        @Html.TextBoxFor(b => b.Author.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Author.LastName, new { @class = "control-label" })
        @Html.TextBoxFor(b => b.Author.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Rating, new { @class = "control-label" }) (Must be between 0 and 5)
        @Html.TextBoxFor(b => b.Rating, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="checkbox">
            <label>
                Is the book on the shelf? @Html.CheckBoxFor(b => b.OnShelf)
            </label>
        </div>
    </div>

    <div class="col-md-12">
        <div class="pad-top">
            <button type="submit" class="btn btn-success btn-lg margin-right">
                Save
            </button>
            <a href="@Url.Action("Index")" class="btn btn-warning btn-lg">
                Cancel
            </a>
        </div>
    </div>
</div>
}
